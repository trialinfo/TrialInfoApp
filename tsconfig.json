{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2015",
	"moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ]
        }
    },
    "include": [
      "app/tests/**/*.ts",
      "app/**/*.ios.ts",
      "app/**/*.android.ts"
    ],
    "files": [
      "./app/main.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}
