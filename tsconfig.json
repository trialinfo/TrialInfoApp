{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "es2015",
            "dom",
            "es2017"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "app/*"
            ]
        },
        "removeComments": false
    },
    "include": [
        "app/tests/**/*.ts",
        "app/**/*.ios.ts",
        "app/**/*.android.ts"
    ],
    "files": [
        "./app/main.ts",
        "./app/polyfills.ts"
    ],
    "exclude": [
        "node_modules",
        "platforms"
    ]
}